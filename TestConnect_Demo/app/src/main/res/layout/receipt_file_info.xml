<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/printer_info_table_row_vertical_padding"
        android:paddingTop="@dimen/printer_info_table_row_vertical_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/print_demo_info_table_margin"
            android:text="@string/file_size"
            android:textAllCaps="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/print_demo_info_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/receipt_file_size"
            android:textStyle="bold"
            android:textSize="@dimen/print_demo_info_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/printer_info_table_row_vertical_padding"
        android:paddingTop="@dimen/printer_info_table_row_vertical_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/print_demo_info_table_margin"
            android:text="@string/dimensions"
            android:textAllCaps="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/print_demo_info_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/receipt_dimensions"
            android:textStyle="bold"
            android:textSize="@dimen/print_demo_info_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/printer_info_table_row_vertical_padding"
        android:paddingTop="@dimen/printer_info_table_row_vertical_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/print_demo_info_table_margin"
            android:text="@string/print_mode"
            android:textAllCaps="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/print_demo_info_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/receipt_print_mode"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="@dimen/print_demo_info_text" />
    </TableRow>

</TableLayout>